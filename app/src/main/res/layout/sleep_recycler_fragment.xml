<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="22dp"
    android:paddingBottom="10dp"
    android:layout_marginEnd="22dp">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.85"
        android:background="#FFFFFF"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/sleep_item_image"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:alpha="0.75"
            app:srcCompat="@drawable/sleeppng" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/ic_menu_edit"
            app:backgroundTint="@color/purple_700"
            app:backgroundTintMode="src_in" />


        <Button
            android:id="@+id/delete_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/notes_txt"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/ic_menu_delete"
            app:backgroundTint="@color/purple_700"
            app:backgroundTintMode="src_in" />

        <TextView
            android:id="@+id/start_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sleep_item_image"
            android:layout_alignTop="@+id/sleep_item_image"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="#E3D1D1"
            android:text="StartTime"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/end_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sleep_item_image"
            android:layout_alignEnd="@+id/sleep_item_image"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="#E3D1D1"
            android:text="EndTime"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#ECE0F4"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/isDay_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/moon" />

        <ImageView
            android:id="@+id/stopwatch_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/result_txt"
            app:srcCompat="@drawable/stopwatch" />

        <TextView
            android:id="@+id/result_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="114dp"
            android:text="result_is"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/notes_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:hint="any notes ?.."
            android:textColor="@color/design_default_color_error"
            android:textColorHint="@color/purple_200"
            android:textSize="12sp"
            android:textStyle="italic" />


    </RelativeLayout>

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/container"
        android:layout_height="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_activ"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:cardBackgroundColor="#C6B2CA"
        app:layout_constraintBottom_toTopOf="@+id/space"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_marginStart="20dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/baby" />

        <TextView
            android:id="@+id/child_activity_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>